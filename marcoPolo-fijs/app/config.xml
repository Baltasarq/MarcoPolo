<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devbaltasarq.marcopolo" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MarcoPolo</name>
    <description>
        Ficci√≥n interactiva sobre el retorno del explorador italiano a su casa, Venecia.
    </description>
    <author email="baltasarq@gmail.com" href="http://caad.es/baltasarq/">
        Baltasar
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <!--
        	ldpi    : 36x36 px
        	mdpi    : 48x48 px
        	hdpi    : 72x72 px
        	xhdpi   : 96x96 px
        	xxhdpi  : 144x144 px
        	xxxhdpi : 192x192 px
    	-->

        <icon density="ldpi" src="res/icon/android/gondola-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/gondola-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/gondola-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/gondola-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/gondola-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/gondola-xxxhdpi.png" />

        <icon src="res/icon/android/gondola.png" />

        <splash src="res/icon/android/gondola.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
